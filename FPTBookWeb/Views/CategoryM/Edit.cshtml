@model FPTBookWeb.Models.Category

@{
    ViewData["Title"] = "Edit Category";
}

<h1>Edit <strong class="fst-italic">@Html.DisplayFor(model => model.CategoryName)</strong></h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CategoryId" />
            <div class="form-group">
                <label asp-for="CategoryName" class="control-label"></label>
                <input asp-for="CategoryName" class="form-control input-data" />
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CatDetails" class="control-label"></label>
                <input asp-for="CatDetails" class="form-control input-data" />
                <span asp-validation-for="CatDetails" class="text-danger"></span>
            </div>
            <div class="form-group d-flex flex-row col-5">
                <input type="submit" value="Save" class="btn btn-save" />
                <a asp-action="Index" class="btn btn-back text-center"><i class="fa-solid fa-arrow-left"></i> Back</a>
            </div>
           
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
