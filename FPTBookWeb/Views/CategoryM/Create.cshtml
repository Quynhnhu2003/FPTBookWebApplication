@model FPTBookWeb.Models.Category

@{
    ViewData["Title"] = "Add New Category";
}

<h1>Add Category</h1>
<hr />
<div class="row">
    <div class="col-10">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="d-flex flex-row">
                <div class="form-group col-4 me-3">
                    <label asp-for="CategoryName" class="control-label fs-2"></label>
                    <input asp-for="CategoryName" class="form-control input-data" />
                    <span asp-validation-for="CategoryName" class="text-danger"></span>
                </div>
                <div class="form-group col-4">
                    <label asp-for="CatDetails" class="control-label fs-2"></label>
                    <input asp-for="CatDetails" class="form-control input-data" />
                    <span asp-validation-for="CatDetails" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group col-4 d-flex flex-row">
                <a asp-action="Index" class="btn btn-back text-center"><i class="fa-solid col-4 fa-arrow-left"></i> Back</a>
                <input type="submit" value="Add" class="btn-outline btn btn-create mb-2 fs-2" />
            </div>
        </form>
    </div>
</div>

<div>
   
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
