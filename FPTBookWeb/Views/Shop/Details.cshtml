@model FPTBookWeb.Models.Book

@{
    ViewData["Title"] = "Details";
}

<div id="page">
	<div id="fh5co-product">
		<div class="container">
			<div class="row">
				<div class="col-md-10 col-md-offset-1">
					<div class="owl-carousel owl-carousel-fullwidth product-carousel">
						<div class="item">
							<div class="active text-center">
								<figure class="product_single_figure">
									<img src="/@Model.BookImage1" alt="user">
								</figure>
							</div>
						</div>
						<div class="item">
							<div class="active text-center">
								<figure class="product_single_figure">
									<img src="/@Model.BookImage1" alt="user">
								</figure>
							</div>
						</div>
						<div class="item">
							<div class="active text-center">
								<figure class="product_single_figure">
									<img src="/@Model.BookImage1" alt="user">
								</figure>
							</div>
						</div>
					</div>
					<div class="row animate-box">
						<div class="col-md-8 col-md-offset-2 text-center fh5co-heading">
							<h2>@Html.DisplayFor(model => model.BookTitle)</h2>
							<p>
								<a asp-controller="Cart" asp-action="AddToCart" asp-route-id="@Model.BookId" class="btn btn-primary btn-outline btn-lg">Add to Cart</a>
							</p>
						</div>
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col-md-10 col-md-offset-1">
					<div class="fh5co-tabs animate-box">
						<ul class="fh5co-tab-nav">
							<li class="active"><a href="#" data-tab="1"><span class="icon visible-xs"><i class="icon-file"></i></span><span class="hidden-xs">Product Details</span></a></li>
							<li><a href="#" data-tab="2"><span class="icon visible-xs"><i class="icon-bar-graph"></i></span><span class="hidden-xs">Specification</span></a></li>
						</ul>

						<!-- Tabs -->
						<div class="fh5co-tab-content-wrap">

							<div class="fh5co-tab-content tab-content active" data-tab-content="1">
								<div class="col-md-10 col-md-offset-1">
									<span class="price">Price: @Html.DisplayFor(model => model.BookPrice)</span>
									<h2>@Html.DisplayFor(model => model.BookTitle)</h2>
									<p>@Html.DisplayFor(model => model.BookDescription)</p>
									<div class="row">
										<div class="col-md-6">
											<h2 class="uppercase">@Html.DisplayNameFor(model => model.Author)</h2>
											<p>@Html.DisplayFor(model => model.Author.AuthorName)</p>
										</div>
										<div class="col-md-6">
											<h2 class="uppercase">Category</h2>
											<p>@Html.DisplayFor(model => model.Category.CategoryName)</p>
										</div>
										<div class="col-md-6">
											<h2 class="uppercase">Publisher</h2>
											<p>@Html.DisplayFor(model => model.Publisher.PublisherName)</p>
										</div>
									</div>

								</div>
							</div>

							<div class="fh5co-tab-content tab-content" data-tab-content="2">
								<div class="col-md-10 col-md-offset-1">
									<h3>Book Specification</h3>
									<ul>
										<li><strong>Book Name:</strong> @Html.DisplayFor(model => model.BookTitle)</li>
										<li><strong>Author:</strong> @Html.DisplayFor(model => model.Author.AuthorName)</li>
										<li><strong>Category:</strong> @Html.DisplayFor(model => model.Category.CategoryName)</li>
									</ul>
									<ul>
										<li><strong>Publisher:</strong> @Html.DisplayFor(model => model.Publisher.PublisherName)</li>
										<li><strong>Description:</strong> @Html.DisplayFor(model => model.BookDescription)</li>
										<li><strong>Store Owner:</strong> @Html.DisplayFor(model => model.User.FullName)</li>
									</ul>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>