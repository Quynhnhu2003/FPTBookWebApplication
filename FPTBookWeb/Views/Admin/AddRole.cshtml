@model FPTBookWeb.ViewModels.AddRoleViewModel

@{
    ViewData["Title"] = "Add Role";
}

<h1>Add role</h1>

<form asp-action="AddRole" method="post" class="mt-3 row ">
    <div class="form-group col-6">
        @* <label asp-for="RoleName" class="col-1 col-form-label"></label> *@
        <div>
            <input asp-for="RoleName" class="form-control input-data" placeholder="Name" />
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>
    </div>
</form>
<div class="d-flex flex-row">
    <a asp-action="ListAllRoles" class="btn btn-back text-center">
        <i class="fa-solid fa-angles-left"></i> Back
    </a>
    <div class="form-group">
        <button type="submit" class="btn-outline btn btn-create mb-2 col-4 fs-2">
            <i class="fa-solid fa-circle-plus"></i>Add role
        </button>
    </div>
</div>