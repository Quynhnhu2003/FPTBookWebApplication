﻿@using Microsoft.AspNetCore.Identity
@model IdentityRole

<h3>Are you sure to delete<strong class="text-uppercase fst-italic">"@Model.Name"</strong>?</h3>
<h5>This action can't be undone</h5>

<div asp-validation-summary="All" class="text-danger"></div>

<form method="post" asp-action="ConfirmDelete" asp-route-id="@Model.Id" class="mt-3 col-2 d-flex flex-row">
    <button type="submit" class="btn btn-outline col-2 btn-delete btn-sm">
        <i class="fa-solid fa-trash-can"></i> Delete
    </button>
    <div>
        <a asp-action="ListAllRoles" class="btn btn-outline col-2 btn-edit btn-sm"><i class="fa-solid fa-ban"></i> Cancel</a>
    </div>
</form>